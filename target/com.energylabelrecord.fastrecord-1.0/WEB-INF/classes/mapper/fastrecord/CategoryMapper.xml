<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.energylabel.fastrecord.dao.CategoryDAO">
	<resultMap id="CategoryMap" type="CategoryInfo">
		<result column="ec_model_id" property="ec_model_id"
			jdbcType="INTEGER" />
		<result column="ec_model_title" property="ec_model_title"
			jdbcType="VARCHAR" />
		<result column="ec_model_no" property="ec_model_no"
			jdbcType="INTEGER" />
		<result column="ec_model_dengji" property="ec_model_dengji"
			jdbcType="INTEGER" />
		<result column="ec_model_isunit" property="ec_model_isunit"
			jdbcType="VARCHAR" />
		<result column="ec_model_labcid" property="ec_model_labcid"
			jdbcType="INTEGER" />
		<result column="ec_model_gb" property="ec_model_gb"
			jdbcType="VARCHAR" />
	</resultMap>

	<select id="getCategoryList" resultMap="CategoryMap" parameterType="map">
		select * from syscategory
		where ec_model_display=1 and ec_model_no in (${model_type_ids}) 
		order by ec_model_no desc
	</select>

	<select id="getCategoryByModel_no" resultMap="CategoryMap"
		parameterType="map">
		select * from syscategory
		where ec_model_no=#{model_no}
	</select>
</mapper>